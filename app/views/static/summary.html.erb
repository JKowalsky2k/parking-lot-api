<style>
table, th, td {
  border:1px solid black;
}
</style>

<h1>User info</h1>
<table style="width:50%">
  <tr>
    <td><strong>Name</td>
    <td><%= current_user.name %></td>
  </tr>
  <tr>
    <td>Surname</td>
    <td><%= current_user.surname %></td>
  </tr>
  <tr>
    <td>Email</td>
    <td><%= current_user.email %></td>
  </tr>
  <tr>
    <td>Phone number</td>
    <td><%= current_user.phone_number %></td>
  </tr>
</table>

<hr>

<h1>Booked parking slots</h1>
<% if current_user.parking_slots.any? %>
    <h2><%= Parking.all[0].city %>, <%= Parking.all[0].street%> <%= Parking.all[0].address_number %></h2>
    <table style="width:20%">
        <th>Position</th>
        <tr>
        <% for parking_slot in current_user.parking_slots do %>
            <th><%= parking_slot.position %></th>
        <% end %>
        </tr> 
<% end %>