<p id="notice"><%= notice %></p>

<% if logged_in? %>
  <% unless current_user.books?(@parking_slot) %>
    <%= link_to( "Book", action: :book) %>
  <% else %>
    <%= link_to( "Book off", action: :book_off) %>
  <% end %>

  <% unless Parking.all[0].adds?(@parking_slot) %>
    <%= link_to( "Add", action: :add) %>
  <% else %>
    <%= link_to( "Remove", action: :remove) %>
  <% end %>
<% end %>

<p>
  <strong>Position:</strong>
  <%= @parking_slot.position %>
</p>

<%= link_to 'Edit', edit_parking_slot_path(@parking_slot) %> |
<%= link_to 'Back', parking_slots_path %>
